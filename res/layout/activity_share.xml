<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E303C"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="GJ.helpinghand.Share" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:padding="5dp"
        android:text="@string/shareNotice"
        android:textColor="#FFFFFF" />
    
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content">	    
 	   <EditText
    	    android:id="@+id/useridShared"
    	    android:layout_width="match_parent"
    		android:layout_height="90dp"
       		android:background="@drawable/outline"
       		android:hint="@string/share_ask_uid"
        	android:paddingBottom="10dp"
        	android:paddingTop="10dp"
        	android:textColor="@color/my_primary_text" />

 	   <Button
 	       android:id="@+id/share"
 	       android:layout_width="wrap_content"
 	       android:layout_height="wrap_content"
 	       android:layout_alignBaseline="@+id/share_userid"
 	       android:layout_alignBottom="@+id/share_userid"
 	       android:layout_alignParentRight="true"
 	       android:layout_marginRight="18dp"
 	       android:background="#2E303C"
 	       android:text="Share"
 	       android:textColor="@color/my_primary_text" />
 	   
	</RelativeLayout>
	
		
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/my_primary_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <ListView 
        android:id="@+id/share_suggestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>